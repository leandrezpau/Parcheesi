# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  PauPlayer_config = debug
  ParcheesiBoard_config = debug
  Parcheesi_config = debug

else ifeq ($(config),release)
  PauPlayer_config = release
  ParcheesiBoard_config = release
  Parcheesi_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := PauPlayer ParcheesiBoard Parcheesi

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

PauPlayer:
ifneq (,$(PauPlayer_config))
	@echo "==== Building PauPlayer ($(PauPlayer_config)) ===="
	@${MAKE} --no-print-directory -C . -f PauPlayer.make config=$(PauPlayer_config)
endif

ParcheesiBoard:
ifneq (,$(ParcheesiBoard_config))
	@echo "==== Building ParcheesiBoard ($(ParcheesiBoard_config)) ===="
	@${MAKE} --no-print-directory -C . -f ParcheesiBoard.make config=$(ParcheesiBoard_config)
endif

Parcheesi: PauPlayer ParcheesiBoard
ifneq (,$(Parcheesi_config))
	@echo "==== Building Parcheesi ($(Parcheesi_config)) ===="
	@${MAKE} --no-print-directory -C . -f Parcheesi.make config=$(Parcheesi_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f PauPlayer.make clean
	@${MAKE} --no-print-directory -C . -f ParcheesiBoard.make clean
	@${MAKE} --no-print-directory -C . -f Parcheesi.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   PauPlayer"
	@echo "   ParcheesiBoard"
	@echo "   Parcheesi"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"